{
  "name": "claude-warden",
  "version": "1.0.0",
  "description": "Smart command safety filter for Claude Code",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format cjs --target node18 --outDir dist --clean --no-splitting",
    "dev": "tsup src/index.ts --format cjs --target node18 --outDir dist --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "eval": "node dist/index.cjs"
  },
  "dependencies": {
    "bash-parser": "^0.5.0",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
